<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/list_2_field_header"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:choiceMode="singleChoice"/>

    <RelativeLayout
        android:id="@+id/form_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
      <TextView
          android:id="@+id/name_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:text="@string/input_label_race_name"/>
      <EditText
          android:id="@+id/name_edit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLength="30"
          android:layout_marginBottom="4dp"
          android:layout_toRightOf="@id/name_view"
          android:layout_toEndOf="@id/name_view"
          android:layout_alignBaseline="@id/name_view"
          android:hint="@string/hint_race_name"/>
      <TextView
          android:id="@+id/dp_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:layout_toRightOf="@id/name_edit"
          android:layout_toEndOf="@id/name_edit"
          android:layout_alignBaseline="@id/name_view"
          android:text="@string/input_label_dev_points"/>
      <EditText
          android:id="@+id/dp_edit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:layout_toRightOf="@id/dp_view"
          android:layout_toEndOf="@id/dp_view"
          android:layout_alignBaseline="@id/name_view"
          android:hint="@string/hint_dev_points"/>

      <TextView
          android:id="@+id/description_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@id/name_view"
          android:text="@string/input_label_description"/>
      <EditText
          android:id="@+id/description_edit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/description_view"
          android:layout_toEndOf="@id/description_view"
          android:layout_alignBaseline="@id/description_view"
          android:inputType="textMultiLine"
          android:hint="@string/hint_race_description"/>

        <LinearLayout
            android:id="@+id/stat_mods"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/description_view">
            <TextView
                android:id="@+id/stat_mods_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_stat_mods"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stat_mod_labels_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/stat_mods">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stat_mod_edits_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/stat_mod_labels_row">
        </LinearLayout>

      <LinearLayout
          android:id="@+id/rr_mods"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@id/stat_mod_edits_row">
        <TextView
            android:id="@+id/rr_mods_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_rr_mods"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/rr_mod_labels_row"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@id/rr_mods">
      </LinearLayout>
      <LinearLayout
          android:id="@+id/rr_mod_edits_row"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@id/rr_mod_labels_row">
      </LinearLayout>
    </RelativeLayout>
</LinearLayout>