<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <TextView
      android:id="@+id/effect_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:text="@string/input_label_effect"/>
  <Spinner
      android:id="@+id/effect_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/effect_label"
      android:layout_toEndOf="@id/effect_label"
      android:layout_centerVertical="true"/>

  <TextView
      android:id="@+id/value_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/effect_spinner"
      android:layout_toEndOf="@id/effect_spinner"
      android:layout_centerVertical="true"
      android:text="@string/input_label_value"/>
  <EditText
      android:id="@+id/value_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:layout_toRightOf="@id/value_label"
      android:layout_toEndOf="@id/value_label"
      android:layout_centerVertical="true"
      android:background="@null"
      android:hint="@string/hint_value"/>

  <TextView
      android:id="@+id/skill_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/effect_spinner"
      android:layout_toEndOf="@id/effect_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_skill"/>
  <Spinner
      android:id="@+id/skill_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/skill_label"
      android:layout_toEndOf="@id/skill_label"
      android:layout_centerVertical="true"
      android:visibility="gone"/>
  <TextView
      android:id="@+id/skill_bonus_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/skill_spinner"
      android:layout_toEndOf="@id/skill_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_bonus"/>
  <EditText
      android:id="@+id/skill_bonus_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:layout_toRightOf="@id/skill_bonus_label"
      android:layout_toEndOf="@id/skill_bonus_label"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:background="@null"
      android:hint="@string/hint_skill_bonus"/>

  <TextView
      android:id="@+id/specialization_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/effect_spinner"
      android:layout_toEndOf="@id/effect_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_specialization"/>
  <Spinner
      android:id="@+id/specialization_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/specialization_label"
      android:layout_toEndOf="@id/specialization_label"
      android:layout_centerVertical="true"
      android:visibility="gone"/>
  <TextView
      android:id="@+id/specialization_bonus_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/specialization_spinner"
      android:layout_toEndOf="@id/specialization_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_bonus"/>
  <EditText
      android:id="@+id/specialization_bonus_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:layout_toRightOf="@id/specialization_bonus_edit"
      android:layout_toEndOf="@id/specialization_bonus_edit"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:background="@null"
      android:hint="@string/hint_specialization_bonus"/>

  <TextView
      android:id="@+id/resistance_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/effect_spinner"
      android:layout_toEndOf="@id/effect_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_resistance"/>
  <Spinner
      android:id="@+id/resistance_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/resistance_label"
      android:layout_toEndOf="@id/resistance_label"
      android:layout_centerVertical="true"
      android:visibility="gone"/>
  <TextView
      android:id="@+id/resistance_value_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/resistance_spinner"
      android:layout_toEndOf="@id/resistance_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_value"/>
  <EditText
      android:id="@+id/resistance_value_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:layout_toRightOf="@id/resistance_value_label"
      android:layout_toEndOf="@id/resistance_value_label"
      android:layout_centerVertical="true"
      android:background="@null"
      android:visibility="gone"
      android:hint="@string/hint_resistance_value"/>

  <TextView
      android:id="@+id/stat_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/effect_spinner"
      android:layout_toEndOf="@id/effect_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_stat"/>
  <Spinner
      android:id="@+id/stat_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/stat_label"
      android:layout_toEndOf="@id/stat_label"
      android:layout_centerVertical="true"
      android:visibility="gone"/>
  <TextView
      android:id="@+id/stat_bonus_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/stat_spinner"
      android:layout_toEndOf="@id/stat_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_stat"/>
  <EditText
      android:id="@+id/stat_bonus_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:layout_toRightOf="@id/stat_bonus_label"
      android:layout_toEndOf="@id/stat_bonus_label"
      android:layout_centerVertical="true"
      android:background="@null"
      android:visibility="gone"
      android:hint="@string/hint_stat_bonus"/>
</RelativeLayout>