<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/skill_name_label1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_skill_name"/>
    <TextView
        android:id="@+id/skill_cost_label1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_skill_cost"/>
    <TextView
        android:id="@+id/skill_name_label2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_skill_name"/>
    <TextView
        android:id="@+id/skill_cost_label2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_skill_cost"/>
    <TextView
        android:id="@+id/skill_name_label3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_skill_name"/>
    <TextView
        android:id="@+id/skill_cost_label3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_skill_cost"/>
    </LinearLayout>
</merge>