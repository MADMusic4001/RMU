<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <include layout="@layout/code_name_examples_header"/>

  <ListView
      android:id="@+id/list_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:choiceMode="singleChoice"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <EditText
        android:id="@+id/code_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/name_edit"
        android:nextFocusRight="@id/name_edit"
        android:nextFocusForward="@id/name_edit"
        android:nextFocusLeft="@+id/max_height_edit"
        android:nextFocusUp="@id/max_height_edit"
        android:imeOptions="actionNext"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="@string/hint_size_code"/>
    <EditText
        android:id="@+id/name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:nextFocusForward="@+id/examples_edit"
        android:nextFocusRight="@id/examples_edit"
        android:nextFocusDown="@id/examples_edit"
        android:nextFocusLeft="@id/code_edit"
        android:nextFocusUp="@id/code_edit"
        android:imeOptions="actionNext"
        android:layout_toEndOf="@id/code_edit"
        android:layout_toRightOf="@id/code_edit"
        android:layout_alignBaseline="@id/code_edit"
        android:hint="@string/hint_size_name"/>

    <EditText
        android:id="@+id/examples_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/min_weight_edit"
        android:nextFocusRight="@id/min_weight_edit"
        android:nextFocusForward="@id/min_weight_edit"
        android:nextFocusLeft="@id/name_edit"
        android:nextFocusUp="@id/name_edit"
        android:imeOptions="actionNext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/code_edit"
        android:hint="@string/hint_example_races"/>

    <EditText
        android:id="@+id/min_weight_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="6"
        android:nextFocusDown="@+id/max_weight_edit"
        android:nextFocusRight="@id/max_weight_edit"
        android:nextFocusForward="@id/max_weight_edit"
        android:nextFocusLeft="@id/examples_edit"
        android:nextFocusUp="@id/examples_edit"
        android:imeOptions="actionNext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/examples_edit"
        android:hint="@string/hint_min_weight"/>
    <EditText
        android:id="@+id/max_weight_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="6"
        android:nextFocusDown="@+id/min_height_edit"
        android:nextFocusRight="@id/min_height_edit"
        android:nextFocusForward="@id/min_height_edit"
        android:nextFocusLeft="@id/min_weight_edit"
        android:nextFocusUp="@id/min_weight_edit"
        android:imeOptions="actionNext"
        android:layout_toEndOf="@id/min_weight_edit"
        android:layout_toRightOf="@id/min_weight_edit"
        android:layout_alignBaseline="@id/min_weight_edit"
        android:hint="@string/hint_max_weight"/>

    <EditText
        android:id="@+id/min_height_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="5"
        android:nextFocusDown="@+id/max_height_edit"
        android:nextFocusRight="@id/max_height_edit"
        android:nextFocusForward="@id/max_height_edit"
        android:nextFocusLeft="@id/max_weight_edit"
        android:nextFocusUp="@id/max_weight_edit"
        android:imeOptions="actionNext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/min_weight_edit"
        android:hint="@string/hint_min_height"/>
    <EditText
        android:id="@+id/max_height_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="5"
        android:nextFocusLeft="@id/min_height_edit"
        android:nextFocusUp="@id/min_height_edit"
        android:nextFocusDown="@id/code_edit"
        android:nextFocusRight="@id/code_edit"
        android:imeOptions="actionDone"
        android:layout_toEndOf="@id/min_height_edit"
        android:layout_toRightOf="@id/min_height_edit"
        android:layout_alignBaseline="@id/min_height_edit"
        android:hint="@string/hint_max_height"/>
    </RelativeLayout>
</LinearLayout>