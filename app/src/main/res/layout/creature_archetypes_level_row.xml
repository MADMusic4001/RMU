      android:id="@+id/power_dev_edit"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:maxLength="3"/>
  <EditText
      android:id="@+id/spells_edit"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:maxLength="4"/>
  <EditText
      android:id="@+id/talent_dp_edit"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:maxLength="3"/>
  <EditText
      android:id="@+id/agility_edit"
      android:layout_width="0dp"
      android:layout_weight="1"
