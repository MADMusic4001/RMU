<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <TextView
      android:id="@+id/filter_textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/input_label_spell_list_filter"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
  <Spinner
      android:id="@+id/spell_list_filter_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@id/filter_textView"
      app:layout_constraintTop_toBottomOf="@id/filter_textView"/>

  <include layout="@layout/list_2_field_header"
           android:id="@+id/include"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/spell_list_filter_spinner"/>

  <ListView
      android:id="@+id/list_view"
      android:layout_width="match_parent"
      android:layout_height="180dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/include"
      android:choiceMode="singleChoice"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/list_view">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <android.support.design.widget.TextInputLayout
          android:id="@+id/name_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintHorizontal_chainStyle="spread_inside"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@+id/spell_level_textInputLayout"
          app:layout_constraintTop_toTopOf="parent">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:text="@string/hint_spell_name"
            android:hint="@string/hint_spell_name"/>
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@id/spell_level_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/name_textInputLayout"
          app:layout_constraintRight_toLeftOf="@+id/spell_list_textView"
          app:layout_constraintTop_toTopOf="parent">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/spell_level_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_spell_level"
            android:hint="@string/hint_spell_level"/>
      </android.support.design.widget.TextInputLayout>
      <TextView
          android:id="@id/spell_list_textView"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/spell_level_textInputLayout"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:text="@string/input_label_spell_list"/>
      <Spinner
          android:id="@+id/spell_list_spinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="@id/spell_list_textView"
          app:layout_constraintTop_toBottomOf="@id/spell_list_textView"/>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/notes_textInputLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/name_textInputLayout">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/notes_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/hint_spell_description"
            android:hint="@string/hint_spell_description"/>
      </android.support.design.widget.TextInputLayout>

      <TextView
          android:id="@+id/spell_type_label"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintHorizontal_chainStyle="spread_inside"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@+id/spell_sub_type_label"
          app:layout_constraintTop_toBottomOf="@id/notes_textInputLayout"
          style="@style/InputLabel"
          android:text="@string/input_label_spell_type"/>
      <Spinner
          android:id="@+id/spell_type_spinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="@id/spell_type_label"
          app:layout_constraintTop_toBottomOf="@id/spell_type_label"/>
      <TextView
          android:id="@id/spell_sub_type_label"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/spell_type_label"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/notes_textInputLayout"
          style="@style/InputLabel"
          android:text="@string/input_label_spell_sub_type"/>
      <Spinner
          android:id="@+id/spell_sub_type_spinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="@id/spell_sub_type_label"
          app:layout_constraintTop_toBottomOf="@id/spell_sub_type_label"/>

      <LinearLayout
          android:id="@+id/area_of_effect_layout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@+id/aoe_param1_textInputLayout"
          app:layout_constraintTop_toBottomOf="@id/spell_type_spinner"
          app:layout_constraintHorizontal_chainStyle="spread_inside">
        <TextView
            android:id="@+id/area_of_effect_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputLabel"
            android:text="@string/input_label_area_of_effect"/>
        <Spinner
            android:id="@+id/area_of_effect_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/area_of_effect_label"
            app:layout_constraintTop_toBottomOf="@id/area_of_effect_label"/>
      </LinearLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@id/aoe_param1_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/area_of_effect_layout"
          app:layout_constraintRight_toLeftOf="@+id/aoe_param2_textInputLayout"
          app:layout_constraintTop_toBottomOf="@id/spell_type_spinner">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/aoe_param1_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/hint_spell_aoe_param1"
            android:hint="@string/hint_spell_aoe_param1"/>
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@id/aoe_param2_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/aoe_param1_textInputLayout"
          app:layout_constraintRight_toLeftOf="@+id/aoe_param3_textInputLayout"
          app:layout_constraintTop_toBottomOf="@id/spell_type_spinner">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/aoe_param2_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/hint_spell_aoe_param2"
            android:hint="@string/hint_spell_aoe_param2"/>
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@id/aoe_param3_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/aoe_param2_textInputLayout"
          app:layout_constraintRight_toLeftOf="@+id/aoe_param4_textInputLayout"
          app:layout_constraintTop_toBottomOf="@id/spell_type_spinner">
        <EditText
            android:id="@+id/aoe_param3_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/hint_spell_aoe_param3"
            android:hint="@string/hint_spell_aoe_param3"/>
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@id/aoe_param4_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/aoe_param3_textInputLayout"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/spell_type_spinner">
        <EditText
            android:id="@+id/aoe_param4_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/hint_spell_aoe_param4"
            android:hint="@string/hint_spell_aoe_param4"/>
      </android.support.design.widget.TextInputLayout>

      <LinearLayout
          android:id="@+id/duration_layout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@+id/duration_param1_textInputLayout"
          app:layout_constraintTop_toBottomOf="@id/aoe_param1_textInputLayout">
        <TextView
            android:id="@+id/duration_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputLabel"
            android:text="@string/input_label_duration"/>
        <Spinner
            android:id="@+id/duration_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
      </LinearLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@id/duration_param1_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/duration_layout"
          app:layout_constraintRight_toLeftOf="@+id/duration_param2_textInputLayout"
          app:layout_constraintTop_toBottomOf="@id/aoe_param1_textInputLayout">
        <EditText
            android:id="@+id/duration_param1_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/hint_spell_duration_param1"
            android:hint="@string/hint_spell_duration_param1"/>
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@id/duration_param2_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/duration_param1_textInputLayout"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/aoe_param1_textInputLayout">
        <EditText
            android:id="@+id/duration_param2_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/hint_spell_duration_param2"
            android:hint="@string/hint_spell_duration_param2"/>
      </android.support.design.widget.TextInputLayout>

      <LinearLayout
          android:id="@+id/range_layout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@+id/range_param_textInputLayout"
          app:layout_constraintTop_toBottomOf="@id/duration_param1_textInputLayout">
        <TextView
            android:id="@+id/range_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/input_label_range"/>
        <Spinner
            android:id="@+id/range_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/range_label"
            app:layout_constraintTop_toBottomOf="@id/range_label"/>
      </LinearLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@id/range_param_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toRightOf="@id/range_layout"
          app:layout_constraintRight_toLeftOf="@+id/rr_mod_textInputLayout"
          app:layout_constraintTop_toBottomOf="@id/duration_param1_textInputLayout">
        <EditText
            android:id="@+id/range_param_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/hint_spell_range_param"
            android:hint="@string/hint_spell_range_param"/>
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@id/rr_mod_textInputLayout"
          android:layout_width="0dp"
          app:layout_constraintHorizontal_weight="1"
          android:layout_height="match_parent"
          app:layout_constraintLeft_toRightOf="@id/range_param_textInputLayout"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/duration_param1_textInputLayout">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/rr_mod_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:maxLength="4"
            android:text="@string/hint_spell_rr_mod"
            android:hint="@string/hint_spell_rr_mod"/>
      </android.support.design.widget.TextInputLayout>
    </android.support.constraint.ConstraintLayout>
  </ScrollView>
</android.support.constraint.ConstraintLayout>