<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/input_label_spell_list_filter"/>
  <Spinner
      android:id="@+id/spell_list_filter_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <include layout="@layout/list_2_field_header"/>

  <ListView
      android:id="@+id/list_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center_horizontal"
      android:choiceMode="singleChoice"/>

  <LinearLayout
      android:id="@+id/form_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="center_horizontal">
    <EditText
        android:id="@+id/name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:hint="@string/hint_spell_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_label_spell_list"/>
    <Spinner
        android:id="@+id/spell_list_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>
  <EditText
    android:id="@+id/notes_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textMultiLine"
    android:hint="@string/hint_spell_description"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/spell_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/input_label_spell_type"/>
    <Spinner
        android:id="@+id/spell_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/spell_type_label"
        android:layout_toEndOf="@id/spell_type_label"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/spell_sub_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/spell_type_spinner"
        android:layout_toEndOf="@id/spell_type_spinner"
        android:layout_centerVertical="true"
        android:text="@string/input_label_spell_sub_type"/>
    <Spinner
        android:id="@+id/spell_sub_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/spell_sub_type_label"
        android:layout_toEndOf="@id/spell_sub_type_label"
        android:layout_centerVertical="true"/>
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/area_of_effect_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/input_label_area_of_effect"/>
    <Spinner
        android:id="@+id/area_of_effect_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/area_of_effect_label"
        android:layout_toEndOf="@id/area_of_effect_label"
        android:layout_centerVertical="true"/>
    <EditText
        android:id="@+id/aoe_param1_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/area_of_effect_spinner"
        android:layout_toEndOf="@id/area_of_effect_spinner"
        android:layout_centerVertical="true"
        android:hint="@string/hint_spell_aoe_param1"/>
  </RelativeLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <EditText
        android:id="@+id/aoe_param2_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/hint_spell_aoe_param2"/>
    <EditText
        android:id="@+id/aoe_param3_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/hint_spell_aoe_param3"/>
    <EditText
        android:id="@+id/aoe_param4_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/hint_spell_aoe_param4"/>
  </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/input_label_duration"/>
    <Spinner
        android:id="@+id/duration_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/duration_label"
        android:layout_toEndOf="@id/duration_label"
        android:layout_centerVertical="true"/>
    <EditText
        android:id="@+id/duration_param1_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/duration_spinner"
        android:layout_toEndOf="@id/duration_spinner"
        android:layout_centerVertical="true"
        android:hint="@string/hint_spell_duration_param1"/>
    <EditText
        android:id="@+id/duration_param2_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/duration_param1_edit"
        android:layout_toEndOf="@id/duration_param1_edit"
        android:layout_centerVertical="true"
        android:hint="@string/hint_spell_duration_param2"/>
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/range_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/input_label_range"/>
    <Spinner
        android:id="@+id/range_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/range_label"
        android:layout_toEndOf="@id/range_label"
        android:layout_centerVertical="true"/>
    <EditText
        android:id="@+id/range_param_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/range_spinner"
        android:layout_toEndOf="@id/range_spinner"
        android:layout_centerVertical="true"
        android:hint="@string/hint_spell_range_param"/>
  </RelativeLayout>
</LinearLayout>