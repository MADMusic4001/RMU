<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_label_current_dps"/>
    <EditText
        android:id="@+id/current_dp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ReadOnlyEditText"/>
  </LinearLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/input_label_talent_category_filter"/>
  <Spinner
      android:id="@+id/talent_category_filter_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <ListView
      android:id="@+id/add_talent_list"
      android:layout_width="wrap_content"
      android:layout_height="120dp"
      android:minHeight="20dp"/>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/talent_names_label"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_talent_name"/>
    <TextView
        android:id="@+id/talent_tiers_label"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_talent_tiers"/>
    <TextView
        android:id="@+id/talent_parameters_label"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="@string/label_talent_parameters"/>
  </LinearLayout>

  <ListView
      android:id="@+id/talent_tiers_list"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center_horizontal"/>
</LinearLayout>