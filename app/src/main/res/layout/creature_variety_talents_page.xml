<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
      android:id="@+id/talent_category_filter_textView"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/current_dp_textInputLayout"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/InputLabel"
      android:text="@string/input_label_talent_category_filter"/>
  <Spinner
      android:id="@+id/talent_category_filter_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@id/talent_category_filter_textView"
      app:layout_constraintTop_toBottomOf="@id/talent_category_filter_textView"/>
  <android.support.design.widget.TextInputLayout
      android:id="@id/current_dp_textInputLayout"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/talent_category_filter_textView"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:textColorHint="?attr/colorControlActivated">
    <EditText
        android:id="@+id/current_dp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="4"
        android:hint="@string/input_label_current_dps"
        style="@style/ReadOnlyEditText"/>
  </android.support.design.widget.TextInputLayout>

  <ListView
      android:id="@+id/add_talent_list"
      android:layout_width="wrap_content"
      android:layout_height="120dp"
      android:minHeight="20dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/talent_category_filter_spinner"/>

  <TextView
      android:id="@+id/talent_names_label"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/talent_tiers_label"
      app:layout_constraintTop_toBottomOf="@id/add_talent_list"
      style="@style/InputLabel"
      android:text="@string/label_talent_name"/>
  <TextView
      android:id="@id/talent_tiers_label"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/talent_names_label"
      app:layout_constraintRight_toLeftOf="@+id/talent_parameters_label"
      app:layout_constraintTop_toBottomOf="@id/add_talent_list"
      style="@style/InputLabel"
      android:text="@string/label_talent_tiers"/>
  <TextView
      android:id="@id/talent_parameters_label"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="2"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/talent_tiers_label"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/add_talent_list"
      style="@style/InputLabel"
      android:text="@string/label_talent_parameters"/>

  <LinearLayout
      android:id="@+id/talent_tiers_container"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintVertical_weight="1"
      android:minHeight="120dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/talent_names_label">
    <ListView
        android:id="@+id/talent_tiers_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
  </LinearLayout>
</android.support.constraint.ConstraintLayout>