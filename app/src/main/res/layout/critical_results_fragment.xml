<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_critical_type_filter"/>
    <Spinner
        android:id="@+id/critical_type_filter_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <include layout="@layout/range_description_header"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:choiceMode="singleChoice"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/critical_type_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/label_critical_type"/>
        <Spinner
            android:id="@+id/critical_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/critical_type_view"
            android:layout_toEndOf="@id/critical_type_view"
            android:layout_alignTop="@id/critical_type_view"/>
        <EditText
            android:id="@+id/description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/critical_type_spinner"
            android:inputType="textMultiLine"
            android:hint="@string/hint_critical_result_description"/>

        <EditText
            android:id="@+id/min_roll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:inputType="number"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/description_edit"
            android:hint="@string/hint_min"/>
        <TextView
            android:id="@+id/hyphen_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:layout_toRightOf="@id/min_roll_edit"
            android:layout_toEndOf="@id/min_roll_edit"
            android:layout_alignBaseline="@id/min_roll_edit"
            android:text="@string/label_hyphen"/>
        <EditText
            android:id="@+id/max_roll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:inputType="number"
            android:layout_toRightOf="@id/hyphen_view"
            android:layout_toEndOf="@id/hyphen_view"
            android:layout_alignBaseline="@id/min_roll_edit"
            android:hint="@string/hint_max"/>
        <EditText
            android:id="@+id/severity_code_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:inputType="textCapCharacters"
            android:layout_toRightOf="@id/max_roll_edit"
            android:layout_toEndOf="@id/max_roll_edit"
            android:layout_alignBaseline="@id/min_roll_edit"
            android:hint="@string/hint_severity_code"/>
        <Spinner
            android:id="@+id/body_part_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/severity_code_edit"
            android:layout_toEndOf="@id/severity_code_edit"
            android:layout_alignTop="@+id/min_roll_edit"/>

        <TextView
            android:id="@+id/hits_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/min_roll_edit"
            android:text="@string/label_hits"/>
        <EditText
            android:id="@+id/hits_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:layout_toRightOf="@id/hits_view"
            android:layout_toEndOf="@id/hits_view"
            android:layout_alignBaseline="@id/hits_view"
            android:hint="@string/hint_hits"/>
        <TextView
            android:id="@+id/bleeding_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hits_edit"
            android:layout_toEndOf="@id/hits_edit"
            android:layout_alignBaseline="@id/hits_view"
            android:text="@string/label_bleeding"/>
        <EditText
            android:id="@+id/bleeding_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bleeding_view"
            android:layout_toEndOf="@id/bleeding_view"
            android:layout_alignBaseline="@id/hits_view"
            android:hint="@string/hint_bleeding"/>
        <TextView
            android:id="@+id/fatigue_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bleeding_edit"
            android:layout_toEndOf="@id/bleeding_edit"
            android:layout_alignBaseline="@id/hits_view"
            android:text="@string/label_fatigue"/>
        <EditText
            android:id="@+id/fatigue_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fatigue_view"
            android:layout_toEndOf="@id/fatigue_view"
            android:layout_alignBaseline="@id/hits_view"
            android:hint="@string/hint_fatigue"/>
        <TextView
            android:id="@+id/breakage_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fatigue_edit"
            android:layout_toEndOf="@id/fatigue_edit"
            android:layout_alignBaseline="@id/hits_view"
            android:text="@string/label_breakage"/>
        <EditText
            android:id="@+id/breakage_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/breakage_view"
            android:layout_toEndOf="@id/breakage_view"
            android:layout_alignBaseline="@id/hits_view"
            android:hint="@string/hint_breakage"/>
        <TextView
            android:id="@+id/injury_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/breakage_edit"
            android:layout_toEndOf="@id/breakage_edit"
            android:layout_alignBaseline="@id/hits_view"
            android:text="@string/label_injury"/>
        <EditText
            android:id="@+id/injury_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/injury_view"
            android:layout_toEndOf="@id/injury_view"
            android:layout_alignBaseline="@id/hits_view"
            android:hint="@string/hint_injury"/>

        <TextView
            android:id="@+id/dazed_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/hits_view"
            android:text="@string/label_dazed"/>
        <EditText
            android:id="@+id/dazed_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dazed_view"
            android:layout_toEndOf="@id/dazed_view"
            android:layout_alignBaseline="@id/dazed_view"
            android:hint="@string/hint_dazed"/>
        <TextView
            android:id="@+id/stunned_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dazed_edit"
            android:layout_toEndOf="@id/dazed_edit"
            android:layout_alignBaseline="@id/dazed_view"
            android:text="@string/label_stunned"/>
        <EditText
            android:id="@+id/stunned_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/stunned_view"
            android:layout_toEndOf="@id/stunned_view"
            android:layout_alignBaseline="@id/dazed_view"
            android:hint="@string/hint_stunned"/>
        <TextView
            android:id="@+id/no_parry_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/stunned_edit"
            android:layout_toEndOf="@id/stunned_edit"
            android:layout_alignBaseline="@id/dazed_view"
            android:text="@string/label_no_parry"/>
        <EditText
            android:id="@+id/stunned_no_parry_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/no_parry_view"
            android:layout_toEndOf="@id/no_parry_view"
            android:layout_alignBaseline="@id/dazed_view"
            android:hint="@string/hint_stunned_no_parry"/>

        <CheckBox
            android:id="@+id/staggered_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/dazed_view"
            android:text="@string/hint_staggered"/>
        <EditText
            android:id="@+id/knock_back_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/staggered_checkbox"
            android:layout_toEndOf="@id/staggered_checkbox"
            android:layout_alignTop="@id/staggered_checkbox"
            android:hint="@string/hint_knock_back"/>
        <CheckBox
            android:id="@+id/prone_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/knock_back_edit"
            android:layout_toEndOf="@id/knock_back_edit"
            android:layout_alignBaseline="@id/staggered_checkbox"
            android:text="@string/hint_prone"/>
        <EditText
            android:id="@+id/grappled_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prone_checkbox"
            android:layout_toEndOf="@id/prone_checkbox"
            android:layout_alignTop="@id/staggered_checkbox"
            android:hint="@string/hint_grappled"/>
    </RelativeLayout>

</LinearLayout>