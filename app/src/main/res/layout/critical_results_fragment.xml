<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/critical_type_filter_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_label_critical_type_filter"/>
    <Spinner
        android:id="@+id/critical_type_filter_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/critical_severity_filter_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_label_critical_severity_filter"/>
    <Spinner
        android:id="@+id/critical_severity_filter_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/left_range_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_roll"/>
    <TextView
        android:id="@+id/body_part_view"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_body_part"/>
    <TextView
        android:id="@+id/hits_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_hits"/>
    <TextView
        android:id="@+id/bleeding_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_bleeding"/>
    <TextView
        android:id="@+id/fatigue_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_fatigue"/>
    <TextView
        android:id="@+id/breakage_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_break"/>
    <TextView
        android:id="@+id/injury_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_injury"/>
    <TextView
        android:id="@+id/dazed_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_dazed"/>
    <TextView
        android:id="@+id/stunned_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_stunned"/>
    <TextView
        android:id="@+id/no_parry_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_no_parry"/>
    <TextView
        android:id="@+id/staggered_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_stagger"/>
    <TextView
        android:id="@+id/knocK_back_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_knock_back"/>
    <TextView
        android:id="@+id/prone_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_prone"/>
    <TextView
        android:id="@+id/grappled_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_grapple"/>
    <TextView
        android:id="@+id/additional_effects_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_additional_effects"/>
    <TextView
        android:id="@+id/right_range_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextViewListHeader"
        android:text="@string/label_roll"/>
  </LinearLayout>

  <ListView
      android:id="@+id/list_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center_horizontal"
      android:overScrollMode="never"
      android:choiceMode="none"/>
</LinearLayout>