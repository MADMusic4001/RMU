<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/list_1_to_5_header"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:hint="@string/hint_talent_name"/>
        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_edit"
            android:layout_toEndOf="@id/name_edit"
            android:layout_alignTop="@id/name_edit"/>

        <EditText
            android:id="@+id/description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/name_edit"
            android:inputType="textMultiLine"
            android:hint="@string/hint_talent_description"/>
        <EditText
            android:id="@+id/initial_cost_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/description_edit"
            android:hint="@string/hint_initial_cost"/>

        <EditText
            android:id="@+id/cost_per_tier_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/initial_cost_edit"
            android:layout_toEndOf="@id/initial_cost_edit"
            android:layout_alignBaseline="@id/initial_cost_edit"
            android:hint="@string/hint_cost_per_tier"/>
        <EditText
            android:id="@+id/bonus_per_tier_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cost_per_tier_edit"
            android:layout_toRightOf="@id/cost_per_tier_edit"
            android:layout_alignBaseline="@id/initial_cost_edit"
            android:hint="@string/hint_bonus_per_tier"/>
        <Spinner
            android:id="@+id/affected_skill_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bonus_per_tier_edit"
            android:layout_toEndOf="@id/bonus_per_tier_edit"
            android:layout_alignTop="@id/initial_cost_edit"/>

        <CheckBox
            android:id="@+id/flaw_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/initial_cost_edit"
            android:text="@string/label_flaw"/>
        <CheckBox
            android:id="@+id/situational_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/flaw_check_box"
            android:layout_toEndOf="@id/flaw_check_box"
            android:layout_alignTop="@+id/flaw_check_box"
            android:text="@string/label_situational"/>
        <EditText
            android:id="@+id/action_points_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/situational_check_box"
            android:layout_toEndOf="@id/situational_check_box"
            android:layout_alignBaseline="@id/situational_check_box"
            android:hint="@string/hint_action_points"/>

        <LinearLayout
            android:id="@+id/param_lists_header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/situational_check_box">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/label_available_params"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/label_params_used"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/param_lists_header">
            <ListView
                android:id="@+id/parameters_list"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:minHeight="20dp"
                android:choiceMode="none"/>
            <ListView
                android:id="@+id/selected_parameters_list"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="120dp"
                android:minHeight="20dp"
                android:choiceMode="none"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>