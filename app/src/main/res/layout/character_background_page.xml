<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/hair_color_layout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/hair_style_layout"
        app:layout_constraintTop_toTopOf="parent">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/hair_color_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:maxLength="15"
          android:hint="@string/hint_character_hair_color"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/hair_style_layout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/hair_color_layout"
        app:layout_constraintRight_toLeftOf="@+id/eye_color_layout"
        app:layout_constraintTop_toTopOf="parent">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/hair_style_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:maxLength="25"
          android:hint="@string/hint_character_hair_style"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/eye_color_layout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/hair_style_layout"
        app:layout_constraintRight_toLeftOf="@+id/skin_complexion_layout"
        app:layout_constraintTop_toTopOf="parent">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/eye_color_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:maxLength="15"
          android:hint="@string/hint_character_eye_color"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/skin_complexion_layout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/eye_color_layout"
        app:layout_constraintRight_toLeftOf="@+id/facial_features_layout"
        app:layout_constraintTop_toTopOf="parent">
      <EditText
          android:id="@+id/skin_complexion_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLength="30"
          android:hint="@string/hint_character_skin_complexion"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/facial_features_layout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/skin_complexion_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/facial_features_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLength="30"
          android:hint="@string/hint_character_facial_features"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/hometown_layout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/identifying_marks_layout"
        app:layout_constraintTop_toBottomOf="@id/hair_color_layout">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/hometown_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/hint_character_hometown"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/identifying_marks_layout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/hometown_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hair_color_layout">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/identifying_marks_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLength="60"
          android:hint="@string/hint_character_identifying_marks"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/personality_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hometown_layout">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/personality_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textMultiLine"
          android:hint="@string/hint_character_personality"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mannerisms_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personality_layout">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/mannerisms_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textMultiLine"
          android:hint="@string/hint_character_mannerisms"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/family_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mannerisms_layout">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/family_info_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textMultiLine"
          android:hint="@string/hint_character_family_info"/>
    </android.support.design.widget.TextInputLayout>

  </android.support.constraint.ConstraintLayout>
</ScrollView>