<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
      android:id="@+id/choose_attack_view"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="2"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/attack_name_view"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      style="@style/InputLabel"
      android:text="@string/label_choose_attacks"/>
  <TextView
      android:id="@id/attack_name_view"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="2"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/choose_attack_view"
      app:layout_constraintRight_toLeftOf="@+id/attack_bonus_view"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/InputLabel"
      android:text="@string/label_attack_name"/>
  <TextView
      android:id="@id/attack_bonus_view"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/attack_name_view"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/InputLabel"
      android:text="@string/label_attack_bonus"/>

  <ListView
      android:id="@+id/attacks_list"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="2"
      android:layout_height="80dp"
      android:minHeight="20dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/attack_bonuses_list"
      app:layout_constraintTop_toBottomOf="@id/choose_attack_view"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      android:descendantFocusability="blocksDescendants"
      android:choiceMode="multipleChoice"/>
  <ListView
      android:id="@id/attack_bonuses_list"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="3"
      android:layout_height="80dp"
      android:minHeight="20dp"
      app:layout_constraintLeft_toRightOf="@id/attacks_list"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/choose_attack_view"
      android:choiceMode="multipleChoice"/>

  <TextView
      android:id="@+id/critical_size_textView"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/attack_sequence_view"
      app:layout_constraintTop_toBottomOf="@id/attacks_list"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      style="@style/InputLabel"
      android:text="@string/input_label_critical_size_modifier"/>
  <Spinner
      android:id="@+id/critical_size_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@id/critical_size_textView"
      app:layout_constraintTop_toBottomOf="@id/critical_size_textView"/>
  <android.support.design.widget.TextInputLayout
      android:id="@id/attack_sequence_view"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="2"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/critical_size_textView"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/attacks_list">
    <EditText
        android:id="@+id/attack_sequence_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="60"
        android:text="@string/input_label_attack_sequence"
        android:hint="@string/hint_attack_sequence"/>
  </android.support.design.widget.TextInputLayout>

  <TextView
      android:id="@+id/critical_codes_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/critical_size_spinner"
      style="@style/InputLabel"
      android:text="@string/input_label_critical_codes"/>
  <ListView
      android:id="@+id/critical_codes_list"
      android:layout_width="wrap_content"
      android:layout_height="100dp"
      android:minHeight="20dp"
      app:layout_constraintLeft_toLeftOf="@id/critical_codes_label"
      app:layout_constraintTop_toBottomOf="@id/critical_codes_label"
      android:choiceMode="multipleChoice"/>
</android.support.constraint.ConstraintLayout>