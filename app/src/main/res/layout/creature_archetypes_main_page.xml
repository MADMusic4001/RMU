<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <EditText
      android:id="@+id/name_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:hint="@string/hint_creature_archetype_name"/>

  <EditText
      android:id="@+id/notes_edit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textMultiLine"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/name_edit"
      android:hint="@string/hint_creature_archetype_description"/>

  <RelativeLayout
      android:id="@+id/stat1_layout"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/notes_edit">
    <TextView
        android:id="@+id/stat1_is_realm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/input_label_stat1_is_realm"/>
    <CheckBox
        android:id="@+id/stat1_is_realm_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stat1_is_realm_label"
        android:layout_toEndOf="@id/stat1_is_realm_label"
        android:layout_centerVertical="true"
        android:button="@null"
        android:background="?android:attr/listChoiceIndicatorMultiple"/>
    <Spinner
        android:id="@+id/stat1_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stat1_is_realm_check_box"
        android:layout_toEndOf="@id/stat1_is_realm_check_box"
        android:layout_centerVertical="true"/>
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/stat2_layout"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/stat1_layout">
    <TextView
        android:id="@+id/stat2_is_realm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/input_label_stat2_is_realm"/>
    <CheckBox
        android:id="@+id/stat2_is_realm_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stat2_is_realm_label"
        android:layout_toEndOf="@id/stat2_is_realm_label"
        android:layout_centerVertical="true"
        android:button="@null"
        android:background="?android:attr/listChoiceIndicatorMultiple"/>
    <Spinner
        android:id="@+id/stat2_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stat2_is_realm_check_box"
        android:layout_toEndOf="@id/stat2_is_realm_check_box"
        android:layout_centerVertical="true"/>
  </RelativeLayout>

  <LinearLayout
      android:id="@+id/skills_header_layout"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/stat2_layout">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_primary_skills"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_secondary_skills"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_tertiary_skills"/>
  </LinearLayout>
  <LinearLayout
      android:id="@+id/skills_lists_layout"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/skills_header_layout"
      android:baselineAligned="false">
    <ListView
        android:id="@+id/primary_skills_list"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:minHeight="20dp"
        android:choiceMode="multipleChoice"/>
    <ListView
        android:id="@+id/secondary_skills_list"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:minHeight="20dp"
        android:choiceMode="multipleChoice"/>
    <ListView
        android:id="@+id/tertiary_skills_list"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:minHeight="20dp"
        android:choiceMode="multipleChoice"/>
  </LinearLayout>

  <TextView
      android:id="@+id/spells_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/skills_lists_layout"
      android:text="@string/input_label_spells"/>
  <EditText
      android:id="@+id/spells_edit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textMultiLine"
      android:layout_toLeftOf="@id/spells_label"
      android:layout_toEndOf="@id/spells_label"
      android:layout_alignBaseline="@id/spells_label"
      android:hint="@string/hint_creature_archetype_spells"/>

  <TextView
      android:id="@+id/roles_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/spells_label"
      android:labelFor="@+id/roles_edit"
      android:text="@string/input_label_roles"/>
  <EditText
      android:id="@id/roles_edit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textMultiLine"
      android:layout_toLeftOf="@id/roles_label"
      android:layout_toEndOf="@id/roles_label"
      android:layout_alignBaseline="@id/roles_label"
      android:hint="@string/hint_creature_archetype_roles"/>
</RelativeLayout>