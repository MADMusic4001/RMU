<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <include layout="@layout/name_description_header"/>
  <ListView
      android:id="@+id/list_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center_horizontal"
      android:choiceMode="singleChoice"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <EditText
          android:id="@+id/name_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/hint_name"
          android:maxLength="20"
          android:padding="5dp"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"/>
      <EditText
          android:id="@+id/description_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:hint="@string/hint_description"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/name_edit"/>

      <EditText
          android:id="@+id/base_value_edit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="@string/hint_base_parameter_value"
          android:maxLength="15"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/description_edit"/>
      <EditText
          android:id="@+id/per_value_edit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="@string/hint_base_parameter_value_per_tier_or_level"
          android:maxLength="15"
          android:layout_toRightOf="@id/base_value_edit"
          android:layout_toEndOf="@id/base_value_edit"
          android:layout_alignBaseline="@id/base_value_edit"/>
      <CheckBox
          android:id="@+id/per_level_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/label_per_level"
          android:button="@null"
          android:textAppearance="?android:attr/textAppearanceMediumInverse"
          android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
          android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
          android:layout_toEndOf="@id/per_value_edit"
          android:layout_toRightOf="@id/per_value_edit"
          android:layout_alignBaseline="@id/base_value_edit"/>
      <CheckBox
          android:id="@+id/per_tier_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/label_per_tier"
          android:button="@null"
          android:textAppearance="?android:attr/textAppearanceMediumInverse"
          android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
          android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
          android:layout_toEndOf="@id/per_level_checkbox"
          android:layout_toRightOf="@id/per_level_checkbox"
          android:layout_alignBaseline="@id/base_value_edit"/>
    </RelativeLayout>
</LinearLayout>