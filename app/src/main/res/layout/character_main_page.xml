<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

  <android.support.constraint.ConstraintLayout
      android:id="@+id/character_main_page_fragment"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/current_level_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/experience_points_textInputLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/current_level_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/input_label_current_lvl"
          style="@style/ReadOnlyEditText"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/experience_points_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/current_level_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/development_points_textInputLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/experience_points_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/input_label_experience_points"
          style="@style/ReadOnlyEditText"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/development_points_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/experience_points_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/level_up_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/development_points_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/input_label_dev_points"
          style="@style/ReadOnlyEditText"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@id/level_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/development_points_textInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/label_level_up"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/campaign_spinner_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/first_name_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/current_level_textInputLayout"
        android:text="@string/input_label_campaign"
        style="@style/InputLabel"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
    <Spinner
        android:id="@id/campaign_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/campaign_spinner_textView"
        app:layout_constraintTop_toBottomOf="@id/campaign_spinner_textView"
        android:nextFocusDown="@+id/first_name_edit"/>
    <android.support.design.widget.TextInputLayout
        android:id="@id/first_name_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/campaign_spinner_textView"
        app:layout_constraintRight_toLeftOf="@+id/last_name_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/current_level_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@id/first_name_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:maxLength="30"
          android:nextFocusDown="@+id/last_name_edit"
          android:text="@string/input_label_first_name"
          android:hint="@string/hint_character_first_name"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/last_name_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/first_name_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/known_as_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/current_level_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@id/last_name_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:maxLength="30"
          android:nextFocusDown="@+id/known_as_edit"
          android:text="@string/input_label_last_name"
          android:hint="@string/hint_character_last_name"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/known_as_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/last_name_textInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_level_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@id/known_as_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:maxLength="30"
          android:nextFocusDown="@+id/notes_edit"
          android:text="@string/hint_character_known_as"
          android:hint="@string/hint_character_known_as"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/notes_textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_name_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@id/notes_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textMultiLine"
          android:nextFocusDown="@+id/race_spinner"
          android:text="@string/hint_character_description"
          android:hint="@string/hint_character_description"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/race_spinner_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/culture_spinner_textView"
        app:layout_constraintTop_toBottomOf="@+id/notes_textInputLayout"
        style="@style/InputLabel"
        android:text="@string/input_label_race"/>
    <Spinner
        android:id="@id/race_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/race_spinner_textView"
        app:layout_constraintTop_toBottomOf="@+id/race_spinner_textView"
        android:nextFocusDown="@+id/culture_spinner"/>
    <TextView
        android:id="@id/culture_spinner_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/race_spinner_textView"
        app:layout_constraintRight_toLeftOf="@+id/profession_spinner_textView"
        app:layout_constraintTop_toBottomOf="@+id/notes_textInputLayout"
        style="@style/InputLabel"
        android:text="@string/input_label_culture"/>
    <Spinner
        android:id="@id/culture_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/culture_spinner_textView"
        app:layout_constraintTop_toBottomOf="@+id/culture_spinner_textView"
        android:nextFocusDown="@+id/profession_spinner"/>
    <TextView
        android:id="@id/profession_spinner_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/culture_spinner_textView"
        app:layout_constraintRight_toLeftOf="@+id/realm_spinner_textView"
        app:layout_constraintTop_toBottomOf="@+id/notes_textInputLayout"
        style="@style/InputLabel"
        android:text="@string/input_label_profession"/>
    <Spinner
        android:id="@id/profession_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/profession_spinner_textView"
        app:layout_constraintTop_toBottomOf="@+id/profession_spinner_textView"
        android:nextFocusDown="@+id/realm_spinner"/>
    <TextView
        android:id="@id/realm_spinner_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/profession_spinner_textView"
        app:layout_constraintRight_toLeftOf="@+id/realm2_spinner_textView"
        app:layout_constraintTop_toBottomOf="@+id/notes_textInputLayout"
        style="@style/InputLabel"
        android:text="@string/input_label_realm"/>
    <Spinner
        android:id="@id/realm_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/realm_spinner_textView"
        app:layout_constraintTop_toBottomOf="@+id/realm_spinner_textView"
        android:nextFocusDown="@+id/realm2_spinner"/>
    <TextView
        android:id="@id/realm2_spinner_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/realm_spinner_textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes_textInputLayout"
        style="@style/InputLabel"
        android:text="@string/input_label_realm2"/>
    <Spinner
        android:id="@id/realm2_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/realm2_spinner_textView"
        app:layout_constraintTop_toBottomOf="@+id/realm2_spinner_textView"
        android:nextFocusDown="@+id/height_edit"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/height_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/weight_textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/race_spinner"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@id/height_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:maxLength="3"
          android:nextFocusDown="@+id/weight_edit"
          android:hint="@string/hint_height"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/weight_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/height_textInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/race_spinner"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@id/weight_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:maxLength="8"
          android:hint="@string/hint_weight"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/generate_stats_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/stat_points_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/height_textInputLayout"
        android:textAllCaps="false"
        android:text="@string/label_generate_stats"/>
    <android.support.design.widget.TextInputLayout
        android:id="@id/stat_points_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/generate_stats_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/stat_points_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/hint_stat_points"
          style="@style/ReadOnlyEditText"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/agility_label"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/constitution_label"
        app:layout_constraintTop_toBottomOf="@id/stat_points_textInputLayout"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/agility_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/agility_label"
        app:layout_constraintTop_toBottomOf="@+id/agility_label"
        android:gravity="center"
        android:text="@string/label_temporary"/>
    <TextView
        android:id="@+id/agility_potential_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/agility_label"
        app:layout_constraintTop_toBottomOf="@+id/agility_label"
        android:gravity="center"
        android:text="@string/label_potential"/>
    <LinearLayout
        android:id="@+id/agility_drag_group"
        android:orientation="horizontal"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/agility_label"
        app:layout_constraintRight_toRightOf="@id/agility_label"
        app:layout_constraintTop_toBottomOf="@id/agility_temp_label">
      <Button
          android:id="@+id/increase_agility_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone"
          android:textAllCaps="false"
          android:text="@string/label_increase_temp"/>
      <ImageButton
          android:id="@+id/agility_increment"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:src="@drawable/ic_add_black"
          android:contentDescription="@string/increment"/>
      <EditText
          android:id="@+id/agility_temp_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textAlignment="center"
          style="@style/ReadOnlyEditText"/>
      <ImageButton
          android:id="@+id/agility_decrement"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:src="@drawable/ic_remove_black"
          android:contentDescription="@string/decrement"/>
      <EditText
          android:id="@+id/agility_potential_view"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:textAlignment="center"
          style="@style/ReadOnlyEditText"/>
    </LinearLayout>

    <TextView
        android:id="@id/constitution_label"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/agility_label"
        app:layout_constraintRight_toLeftOf="@+id/empathy_label"
        app:layout_constraintTop_toBottomOf="@id/stat_points_textInputLayout"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/constitution_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/constitution_label"
        app:layout_constraintTop_toBottomOf="@+id/constitution_label"
        android:gravity="center"
        android:text="@string/label_temporary"/>
    <TextView
        android:id="@+id/constitution_potential_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/constitution_label"
        app:layout_constraintTop_toBottomOf="@id/constitution_label"
        android:gravity="center"
        android:text="@string/label_potential"/>
    <LinearLayout
        android:id="@+id/constitution_drag_group"
        android:orientation="horizontal"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/constitution_label"
        app:layout_constraintRight_toRightOf="@id/constitution_label"
        app:layout_constraintTop_toBottomOf="@id/constitution_temp_label">
      <Button
          android:id="@+id/increase_constitution_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone"
          android:textAllCaps="false"
          android:text="@string/label_increase_temp"/>
      <ImageButton
          android:id="@+id/constitution_increment"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:src="@drawable/ic_add_black"
          android:contentDescription="@string/increment"/>
      <EditText
          android:id="@+id/constitution_temp_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:textAlignment="center"
          style="@style/ReadOnlyEditText"/>
      <ImageButton
          android:id="@+id/constitution_decrement"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:src="@drawable/ic_remove_black"
          android:contentDescription="@string/decrement"/>
      <EditText
          android:id="@+id/constitution_potential_view"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:textAlignment="center"
          style="@style/ReadOnlyEditText"/>
    </LinearLayout>

    <TextView
        android:id="@id/empathy_label"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/constitution_label"
        app:layout_constraintRight_toLeftOf="@+id/intuition_label"
        app:layout_constraintTop_toBottomOf="@id/stat_points_textInputLayout"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/empathy_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/empathy_label"
        app:layout_constraintTop_toBottomOf="@id/empathy_label"
        android:gravity="center"
        android:text="@string/label_temporary"/>
    <TextView
        android:id="@+id/empathy_potential_label"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/empathy_label"
        app:layout_constraintTop_toBottomOf="@id/empathy_label"
        android:gravity="center"
        android:text="@string/label_potential"/>
    <LinearLayout
        android:id="@+id/empathy_drag_group"
        android:orientation="horizontal"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/empathy_label"
        app:layout_constraintRight_toRightOf="@id/empathy_label"
        app:layout_constraintTop_toBottomOf="@id/empathy_temp_label">
      <Button
          android:id="@+id/increase_empathy_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone"
          android:textAllCaps="false"
          android:text="@string/label_increase_temp"/>
      <ImageButton
          android:id="@+id/empathy_increment"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:src="@drawable/ic_add_black"
          android:contentDescription="@string/increment"/>
      <EditText
          android:id="@+id/empathy_temp_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:textAlignment="center"
          style="@style/ReadOnlyEditText"/>
      <ImageButton
          android:id="@+id/empathy_decrement"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:src="@drawable/ic_remove_black"
          android:contentDescription="@string/decrement"/>
      <EditText
          android:id="@+id/empathy_potential_view"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:textAlignment="center"
          style="@style/ReadOnlyEditText"/>
    </LinearLayout>

    <TextView
        android:id="@id/intuition_label"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/empathy_label"
        app:layout_constraintRight_toLeftOf="@+id/memory_label"
        app:layout_constraintTop_toBottomOf="@id/stat_points_textInputLayout"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/intuition_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/intuition_label"
        app:layout_constraintTop_toBottomOf="@id/intuition_label"
        android:gravity="center"
        android:text="@string/label_temporary"/>
    <TextView
        android:id="@+id/intuition_potential_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/intuition_label"
