<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto">

  <android.support.design.widget.TextInputLayout
      android:id="@+id/name_textInputLayout"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/weight_textInputLayout"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="40"
        android:hint="@string/hint_item_template_name"/>
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
      android:id="@id/weight_textInputLayout"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/name_textInputLayout"
      app:layout_constraintRight_toLeftOf="@+id/strength_textInputLayout"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/weight_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:hint="@string/hint_item_weight"/>
  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
      android:id="@id/strength_textInputLayout"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/weight_textInputLayout"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/strength_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="3"
        android:hint="@string/hint_item_strength"/>
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/base_cost_textInputLayout"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/monetary_unit_layout"
      app:layout_constraintTop_toBottomOf="@id/name_textInputLayout"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/base_cost_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="8"
        android:hint="@string/hint_item_base_cost"/>
  </android.support.design.widget.TextInputLayout>
  <LinearLayout
      android:id="@id/monetary_unit_layout"
      android:orientation="vertical"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/base_cost_textInputLayout"
      app:layout_constraintRight_toLeftOf="@+id/construction_time_textInputLayout"
      app:layout_constraintTop_toBottomOf="@id/name_textInputLayout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/InputLabel"
        android:text="@string/label_monetary_unit"/>
    <Spinner
        android:id="@+id/monetary_unit_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  </LinearLayout>
  <android.support.design.widget.TextInputLayout
      android:id="@id/construction_time_textInputLayout"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/monetary_unit_layout"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/name_textInputLayout"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/construction_time_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="5"
        android:hint="@string/hint_item_construction_time"/>
  </android.support.design.widget.TextInputLayout>

  <TextView
      android:id="@+id/maneuver_difficulty_textView"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/primary_slot_textView"
      app:layout_constraintTop_toBottomOf="@id/monetary_unit_layout"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:text="@string/hint_item_maneuver_difficulty"
      style="@style/InputLabel"/>
  <Spinner
      android:id="@+id/maneuver_difficulty_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@id/maneuver_difficulty_textView"
      app:layout_constraintTop_toBottomOf="@id/maneuver_difficulty_textView"/>
  <TextView
      android:id="@id/primary_slot_textView"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/maneuver_difficulty_textView"
      app:layout_constraintRight_toLeftOf="@+id/secondary_slot_textView"
      app:layout_constraintTop_toBottomOf="@id/monetary_unit_layout"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:text="@string/hint_item_primary_slot"
      style="@style/InputLabel"/>
  <Spinner
      android:id="@+id/primary_slot_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@id/primary_slot_textView"
      app:layout_constraintTop_toBottomOf="@id/primary_slot_textView"/>
  <TextView
      android:id="@id/secondary_slot_textView"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/primary_slot_textView"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/monetary_unit_layout"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:text="@string/hint_item_secondary_slot"
      style="@style/InputLabel"/>
  <Spinner
      android:id="@+id/secondary_slot_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@id/secondary_slot_textView"
      app:layout_constraintTop_toBottomOf="@id/secondary_slot_textView"/>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/notes_textInputLayout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/maneuver_difficulty_spinner"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/notes_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="@string/hint_item_description"/>
  </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>