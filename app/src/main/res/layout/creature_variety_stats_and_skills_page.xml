<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto">

  <android.support.design.widget.TextInputLayout
      android:id="@+id/current_dp_textInputLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:textColorHint="?attr/colorControlActivated">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/current_dp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ReadOnlyEditText"
        android:maxLength="5"
        android:text="@string/input_label_current_dps"
        android:hint="@string/input_label_current_dps"/>
  </android.support.design.widget.TextInputLayout>

  <TextView
      android:id="@+id/stat_name_view"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/stat_bonus_view"
      app:layout_constraintTop_toBottomOf="@id/current_dp_textInputLayout"
      style="@style/InputLabel"
      android:text="@string/label_stat_name"/>
  <TextView
      android:id="@id/stat_bonus_view"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/stat_name_view"
      app:layout_constraintRight_toLeftOf="@+id/choose_skill_view"
      app:layout_constraintTop_toBottomOf="@id/current_dp_textInputLayout"
      style="@style/InputLabel"
      android:text="@string/label_stat_bonus"/>
  <TextView
      android:id="@id/choose_skill_view"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="2"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/stat_bonus_view"
      app:layout_constraintRight_toLeftOf="@+id/skill_name_view"
      app:layout_constraintTop_toBottomOf="@id/current_dp_textInputLayout"
      style="@style/InputLabel"
      android:text="@string/label_choose_skills"/>
  <TextView
      android:id="@id/skill_name_view"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="2"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/choose_skill_view"
      app:layout_constraintRight_toLeftOf="@+id/skill_bonus_view"
      app:layout_constraintTop_toBottomOf="@id/current_dp_textInputLayout"
      style="@style/InputLabel"
      android:text="@string/label_skill_name"/>
  <TextView
      android:id="@id/skill_bonus_view"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="1"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/skill_name_view"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/current_dp_textInputLayout"
      style="@style/InputLabel"
      android:text="@string/label_skill_bonus"/>

  <ListView
      android:id="@+id/racial_stat_bonuses_list"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="2"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/skills_list"
      app:layout_constraintTop_toBottomOf="@id/stat_name_view"
      android:choiceMode="none"/>
  <ListView
      android:id="@id/skills_list"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="2"
      android:layout_height="match_parent"
      app:layout_constraintLeft_toRightOf="@id/racial_stat_bonuses_list"
      app:layout_constraintRight_toLeftOf="@+id/skill_bonuses_list"
      app:layout_constraintTop_toBottomOf="@id/stat_name_view"
      android:descendantFocusability="blocksDescendants"
      android:choiceMode="multipleChoice"/>
  <ListView
      android:id="@id/skill_bonuses_list"
      android:layout_width="0dp"
      app:layout_constraintHorizontal_weight="3"
      android:layout_height="500dp"
      app:layout_constraintLeft_toRightOf="@id/skills_list"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/stat_name_view"
      android:choiceMode="multipleChoice"/>
</android.support.constraint.ConstraintLayout>