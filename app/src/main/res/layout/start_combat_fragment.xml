<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_label_campaign"/>
    <Spinner
        android:id="@+id/campaign_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/start_combat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_start_combat"/>
    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_reset"/>
  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_characters"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/label_opponents"/>
  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <ListView
        android:id="@+id/characters_list_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:minHeight="20dp"/>
    <ListView
        android:id="@+id/opponents_list_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:minHeight="20dp"/>
  </LinearLayout>
  <com.madinnovations.rmu.view.HexView
      android:id="@+id/hex_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
</LinearLayout>