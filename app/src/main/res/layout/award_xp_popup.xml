<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_label_experience_points"/>
    <EditText
        android:id="@+id/experience_points_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:maxLength="5"
        android:hint="@string/hint_experience_points"/>
    <Button
        android:id="@+id/award_xp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_award_xp"/>
  </LinearLayout>

  <CheckBox
      android:id="@+id/select_all_check_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/label_select_all"/>

  <ListView
      android:id="@+id/characters_list_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minHeight="120dp"/>
</LinearLayout>