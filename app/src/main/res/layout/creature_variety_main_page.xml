<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

  <android.support.constraint.ConstraintLayout
      android:id="@+id/create_variety_main_page_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/creature_type_spinner_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/name_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLength="30"
          android:text="@string/label_creature_variety_name"
          android:hint="@string/hint_creature_variety_name"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@id/creature_type_spinner_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/name_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/typical_level_textInputLayout"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/InputLabel"
        android:text="@string/label_creature_type"/>
    <Spinner
        android:id="@+id/creature_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/creature_type_spinner_textView"
        app:layout_constraintTop_toBottomOf="@id/creature_type_spinner_textView"/>
    <android.support.design.widget.TextInputLayout
        android:id="@id/typical_level_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/creature_type_spinner_textView"
        app:layout_constraintRight_toLeftOf="@+id/level_spread_spinner_textView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/typical_level_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/hint_creature_variety_typical_level"
          android:hint="@string/hint_creature_variety_typical_level"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@id/level_spread_spinner_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/typical_level_textInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/InputLabel"
        android:text="@string/label_creature_variety_level_spread"/>
    <Spinner
        android:id="@+id/level_spread_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/level_spread_spinner_textView"
        app:layout_constraintTop_toBottomOf="@id/level_spread_spinner_textView"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/notes_edit_textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/notes_edit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textMultiLine"
          android:text="@string/label_creature_variety_description"
          android:hint="@string/hint_creature_variety_description"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/size_spinner_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/height_edit_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/notes_edit_textInputLayout"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        style="@style/InputLabel"
        android:text="@string/input_label_size"/>
    <Spinner
        android:id="@+id/size_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/size_spinner_textView"
        app:layout_constraintTop_toBottomOf="@id/size_spinner_textView"/>
    <android.support.design.widget.TextInputLayout
        android:id="@id/height_edit_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/size_spinner_textView"
        app:layout_constraintRight_toLeftOf="@+id/length_edit_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/notes_edit_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/height_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:text="@string/input_label_height"
          android:hint="@string/hint_creature_variety_height"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/length_edit_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/height_edit_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/weight_edit_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/notes_edit_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/length_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:text="@string/input_label_length"
          android:hint="@string/hint_creature_variety_length"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/weight_edit_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/length_edit_textInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notes_edit_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/weight_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/input_label_weight"
        android:hint="@string/hint_creature_variety_weight"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/healing_rate_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/base_hits_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/height_edit_textInputLayout"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/healing_rate_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:maxLength="3"
          android:text="@string/input_label_healing_rate"
          android:hint="@string/hint_healing_rate"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/base_hits_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/healing_rate_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/base_endurance_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/height_edit_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/base_hits_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:maxLength="4"
          android:text="@string/input_label_base_hits"
          android:hint="@string/hint_base_hits"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/base_endurance_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/base_hits_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/armor_type_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/height_edit_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/base_endurance_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:maxLength="3"
          android:text="@string/input_label_base_endurance"
          android:hint="@string/hint_base_endurance"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/armor_type_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/base_endurance_textInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height_edit_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/armor_type_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:maxLength="2"
          android:text="@string/input_label_armor_type"
          android:hint="@string/hint_armor_type"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/base_channeling_rr_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/base_essence_rr_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/healing_rate_textInputLayout"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/base_channeling_rr_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="numberSigned"
          android:maxLength="3"
          android:text="@string/input_label_base_channeling_rr"
          android:hint="@string/hint_base_channeling_rr"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/base_essence_rr_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/base_channeling_rr_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/base_mentalism_rr_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/healing_rate_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/base_essence_rr_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="numberSigned"
          android:maxLength="3"
          android:text="@string/input_label_base_essence_rr"
          android:hint="@string/hint_base_essence_rr"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/base_mentalism_rr_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/base_essence_rr_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/base_physical_rr_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/healing_rate_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/base_mentalism_rr_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="numberSigned"
          android:maxLength="3"
          android:text="@string/input_label_base_mentalism_rr"
          android:hint="@string/hint_base_mentalism_rr"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/base_physical_rr_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/base_mentalism_rr_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/base_fear_rr_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/healing_rate_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/base_physical_rr_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="numberSigned"
          android:maxLength="3"
          android:text="@string/input_label_base_physical_rr"
          android:hint="@string/hint_base_physical_rr"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/base_fear_rr_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/base_physical_rr_textInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/healing_rate_textInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/base_fear_rr_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="numberSigned"
          android:maxLength="3"
          android:text="@string/input_label_base_fear_rr"
          android:hint="@string/hint_base_fear_rr"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/realm1_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/realm2_textView"
        app:layout_constraintTop_toBottomOf="@id/base_channeling_rr_textInputLayout"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        style="@style/InputLabel"
        android:text="@string/input_label_realm1"/>
    <Spinner
        android:id="@+id/realm1_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/realm1_textView"
        app:layout_constraintTop_toBottomOf="@id/realm1_textView"/>
    <TextView
        android:id="@id/realm2_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/realm1_textView"
        app:layout_constraintRight_toLeftOf="@+id/outlook_textView"
        app:layout_constraintTop_toBottomOf="@id/base_channeling_rr_textInputLayout"
        style="@style/InputLabel"
        android:text="@string/input_label_realm2"/>
    <Spinner
        android:id="@+id/realm2_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/realm2_textView"
        app:layout_constraintTop_toBottomOf="@id/realm2_textView"/>
    <TextView
        android:id="@id/outlook_textView"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/realm2_textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/base_channeling_rr_textInputLayout"
        style="@style/InputLabel"
        android:text="@string/input_label_outlook"/>
    <Spinner
        android:id="@+id/outlook_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/outlook_textView"
        app:layout_constraintTop_toBottomOf="@id/outlook_textView"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/movement_rate_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/base_stride_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/realm1_spinner"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/movement_rate_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/input_label_movement_rate"
          android:hint="@string/hint_movement_rate"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/base_stride_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/movement_rate_textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/leftover_dp_textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/realm1_spinner"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/base_stride_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/input_label_base_stride"
          android:hint="@string/hint_base_stride"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@id/leftover_dp_textInputLayout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/base_stride_textInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/realm1_spinner"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">
      <android.support.design.widget.TextInputEditText
          android:id="@+id/leftover_dp_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/input_label_leftover_dp"
          android:hint="@string/hint_leftover_dp"/>
    </android.support.design.widget.TextInputLayout>
  </android.support.constraint.ConstraintLayout>
</ScrollView>