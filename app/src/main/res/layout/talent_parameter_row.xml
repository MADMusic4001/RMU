<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <ImageButton
      android:id="@+id/remove_parameter_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:background="@drawable/ic_remove_black"
      android:contentDescription="@string/label_remove_parameter"/>
  <TextView
      android:id="@+id/parameter_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/remove_parameter_button"
      android:layout_toEndOf="@id/remove_parameter_button"
      android:layout_centerVertical="true"
      android:text="@string/input_label_parameter"/>
  <Spinner
      android:id="@+id/parameter_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/parameter_label"
      android:layout_toEndOf="@id/parameter_label"
      android:layout_centerVertical="true"/>

  <TextView
      android:id="@+id/initial_value_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/parameter_spinner"
      android:layout_toEndOf="@id/parameter_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_initial_value"/>
  <EditText
      android:id="@+id/initial_value_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="numberSigned"
      android:layout_toRightOf="@id/initial_value_label"
      android:layout_toEndOf="@id/initial_value_label"
      android:layout_centerVertical="true"
      android:background="@null"
      android:visibility="gone"
      android:hint="@string/hint_initial_value"/>
  <TextView
      android:id="@+id/value_per_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/initial_value_edit"
      android:layout_toEndOf="@id/initial_value_edit"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_value_per"/>
  <EditText
      android:id="@+id/value_per_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="numberSigned"
      android:layout_toRightOf="@id/value_per_label"
      android:layout_toEndOf="@id/value_per_label"
      android:layout_centerVertical="true"
      android:background="@null"
      android:visibility="gone"
      android:hint="@string/hint_value_per"/>
  <CheckBox
      android:id="@+id/per_tier_check_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/value_per_edit"
      android:layout_toEndOf="@id/value_per_edit"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/label_per_tier"/>
  <CheckBox
      android:id="@+id/per_level_check_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/per_tier_check_box"
      android:layout_toEndOf="@id/per_tier_check_box"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/label_per_level"/>
  <CheckBox
      android:id="@+id/per_round_check_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/per_level_check_box"
      android:layout_toEndOf="@id/per_level_check_box"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/label_per_round"/>

  <TextView
      android:id="@+id/value_spinner_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/parameter_spinner"
      android:layout_toEndOf="@id/parameter_spinner"
      android:layout_centerVertical="true"
      android:visibility="gone"
      android:text="@string/input_label_sense"/>
  <Spinner
      android:id="@+id/value_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/value_spinner_label"
      android:layout_toEndOf="@id/value_spinner_label"
      android:layout_centerVertical="true"
      android:visibility="gone"/>
</RelativeLayout>